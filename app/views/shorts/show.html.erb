<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3 text-center">
			<h1><%= @short.name %></h1>
		</div>

	</div>

	<div class="album">
		<a href="/short/send/<%=@short.id%>">
      <span class='glyphicon glyphicon-share'></span>
    </a>
		<ul> 
			<% @short.pictures.each do |pic| %>
				<li class="col-md-3 short-picture">
					<img src="<%= pic.image_url %>">
				</li>
			<% end %>
		</ul>
	</div>

</div>
