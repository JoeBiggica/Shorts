// });

$('.version').on('click',function(e){
	var pictureID = $(e.target).parent()[0].className
	var version =  $(e.target).text()
	// console.log(version)
	// console.log($(e.target).parent()[0].className)
	$.get('/pictures/'+pictureID).done(function(response){
		console.log(response)
		console.log(version)
		if(version == "0"){
			var img = document.getElementById(pictureID);
			img.src = response.image_url
			img.parentNode.href = response.image_URL;
		}
		else if(version == "1"){
			var img = document.getElementById(pictureID);

			img.src = response.edited_image_url;
			img.parentNode.href = response.edited_image_url;
		}
		else{
			var img = document.getElementById(pictureID);
			console.log(img)
			img.src = response.image_versions[parseInt(version)-2].image_url;
			img.parentNode.href = response.image_versions[parseInt(version)-2].image_url;
		}
	})




})

var featherEditor = new Aviary.Feather({
	apiKey: '98c31e39a24b8caf',
	apiVersion: 3,
	tools: [,'text','stickers','draw','effects','crop'],
	onSave: function(imageID, newURL) {
		var img = document.getElementById(imageID);
		img.src = newURL;
		// $.ajax({
		// 	url: '/pictures/' + imageID, 
		// 	type: 'PUT',
		// 	data: {picture_id: imageID, url: newURL}
		// })
	},
	postUrl: '/pictures'
});

function launchEditor(id, src) {
	featherEditor.launch({
		image: id,
		url: src
	});
	return false;
} 

</script>
